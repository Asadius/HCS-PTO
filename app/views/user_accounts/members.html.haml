#main.container

  %h3.header PTO members

  = form_tag members_user_accounts_path, :method => :get do
    = label_tag :name, "Name"
    = text_field_tag :name
    = label_tag :accounttype, "Account type"
    = text_field_tag :accounttype
    = label_tag :fromgrade, "From grade"
    = number_field_tag :fromgrade
    = label_tag :tograde, "To grade"
    = number_field_tag :tograde
    = submit_tag "Refine the list of members"


  %table.table
    %thead
      %tr
        %th Name
        %th Email
        %th Child's Grade
        %th Account type


    %tbody
      -@members.each do |member|
        %tr.member
        %td.name= member.name
        %td.email= member.email
        %td.grade= member.childgrade
        %td.type= member.accounttype

  = form_tag email_user_accounts_path, :method => :get do
    = label_tag :sender, "Your name", :required => true
    = text_field_tag :sender
    = label_tag :subject, "Subject", :required => true
    = text_field_tag :subject
    = label_tag :body, "Body", :required => true
    = text_area_tag :body
    = hidden_field_tag :name, params[:name]
    = hidden_field_tag :accounttype, params[:accounttype]
    = hidden_field_tag :fromgrade, params[:fromgrade]
    = hidden_field_tag :tograde, params[:tograde]
    = submit_tag "Send message to members shown"
