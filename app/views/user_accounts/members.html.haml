#main.container

  %h3.header PTO members

  = form_tag members_user_accounts_path, :method => :get do
    = label_tag :accounttype, "Account type"
    = text_field_tag :accounttype
    = label_tag :fromgrade, "From grade"
    = number_field_tag :fromgrade
    = label_tag :tograde, "To grade"
    = number_field_tag :tograde
    = submit_tag "Refine the list of members"


  %table.table
    %thead
      %tr
        %th Name
        %th Email
        %th Child's Grade
        %th Account type


    %tbody
      -@members.each do |member|
        %tr.member
        %td.name= member.name
        %td.email= member.email
        %td.grade= member.childgrade
        %td.type= member.accounttype
