#main.container
  %h1.header= "Account details for #{@user_account.username}"

  %tr
    .user= "Username: "+@user_account.username
  %tr
    .user= "Email: "+@user_account.email
  %tr
    .user= "Child Name: "+@user_account.childname
    - @user_account.childgrade == 0 ? childgrade = "" : childgrade =  @user_account.childgrade
    .user= "Child Grade: "+childgrade.to_s
  %tr
    .user= "Address: "+@user_account.homeaddress

  .row
    .col-md-2= link_to('Edit profile details', edit_user_account_path(@user_account))
