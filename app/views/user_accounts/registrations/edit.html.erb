<h2>Edit User Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :required => true %>

    <%= f.fields_for :children do |child| %>
      <div class="field" id="cname">
        <%= child.label :childname, "Child's Name" %><br />
        <%= child.text_field :childname, autofocus: true, autocomplete: "Child's name" %>
      </div>
      <div class="field" id="cgrade">
        <%= child.label :childgrade, "Child's Grade" %><br />
        <%= child.number_field :childgrade, autofocus: true, autocomplete: "Child's grade", within: 1...13 %>
      </div>
      <div class="field" id="cname">
        <%= child.label :childname, "Child's Name" %><br />
        <%= child.text_field :childname, autofocus: true, autocomplete: "Child's name" %>
      </div>
      <div class="field" id="cgrade">
        <%= child.label :childgrade, "Child's Grade" %><br />
        <%= child.number_field :childgrade, autofocus: true, autocomplete: "Child's grade", within: 1...13 %>
      </div>
    <% end %>

  <script type="text/javascript">
    for(var a = 0; a<3; a++){
      document.getElementById("cname").hidden = true;
      document.getElementById("cgrade").hidden = true;
    }
    function increaseBtnOnclick() {
        document.getElementById("htop").value = Number(document.getElementById("htop").value) + 1;
        var i = document.getElementById("htop").value;
        for(var j =0; j<i; j++){
        document.getElementById("cname").hidden = false;
        document.getElementById("cgrade").hidden = false;
      }
    }
  </script>
  <label for="htop">Number of Children </label>
  <input type="number" min ="1" max ="3" name="htop" value="1" id="htop" onchange="increaseBtnOnclick()">

  <div class="field">
    <%= f.label :homeaddress, "Home Address"%><br />
    <%= f.text_field :homeaddress, autofocus: true, autocomplete: "Home Address" %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "New Password"%> <i>(leave blank if not intending to change)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Current Password" %> <i>(use your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update details" %>
  </div>
<% end %>

<h2>Delete User Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :delete}) do |f| %>
      <div class="field">
        <%= f.label :delete_account_password, "Password"%> <i>(use your current password to confirm account deletion)</i><br />
        <%= f.password_field :delete_account_password, autocomplete: "off"%>
      </div>

      <div class="actions">
        <%= f.submit "Delete User Account", data: { confirm: "Confirm Deletion" } %>
      </div>
<% end %>

<id="back"><%= link_to "Back", :back %>
