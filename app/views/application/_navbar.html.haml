%div.navbar__user-status
  -if !current_user_account.nil?
    %li.navbar__item--primary
      =link_to "Hello, #{current_user_account.name}", user_account_path(current_user_account), :class => 'navbar__item__link navbar__item__link--primary'
    %li.navbar__item--primary
      =link_to "Log Out", destroy_user_account_session_path, method: :delete, :class => 'navbar__item__link navbar__item__link--primary'
  -else
    %li.navbar__item--primary
      =link_to "Sign In", new_user_account_session_path, :class => 'navbar__item__link navbar__item__link--primary'
    %li.navbar__item--primary
      =link_to "Sign Up", new_user_account_registration_path, :class => 'navbar__item__link navbar__item__link--primary'

%div.navbar__header.navbar__width
  / This is the logo for HSCPTO if we have
