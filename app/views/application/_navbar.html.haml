      =link_to "Events", calendar_events_path, :class => 'navbar__item__link navbar__item__link--primary'
    %li.navbar__item--primary
      =link_to "Clubs and Organisations", pages_path(:clubs), :class => 'navbar__item__link navbar__item__link--primary'
