%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title HCS-PTO
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    #header
      -# -if flash[:notice] || flash[:error] || flash[:success]
      .flash
        =render "flash_message"
      %nav.navbar
        =render "navbar"
      -{:notice => "alert-primary", :alert => "alert-warning"}.each do |fkey, xclass|
        -if flash[fkey]
          %div.col-md.flash.alert{:role => 'alert', :class => xclass}
            %p= "#{flash[fkey]}"
    = yield 
