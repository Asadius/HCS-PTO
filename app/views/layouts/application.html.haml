%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title HCS-PTO
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    #header
      %h1.header= link_to("HCS-PTO", root_path)
      -if flash[:notice] || flash[:error] || flash[:success]
        .flash
          -if flash[:notice]
            .alert.alert-info= flash[:notice]
          -if flash[:error]
            .alert.alert-danger= flash[:error]
          -if flash[:success]
            .alert.alert-success= flash[:success]

    = yield
