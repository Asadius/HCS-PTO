#main.container-fluid.background_green

  %br
  %br


  .row
    .col-md-offset-1
    .col-md-4
      %h3.header.title= "#{@calendar_event.title}"
    .col-md-offset-1

  %br
  .row
    .col-md-2.image= image_tag @calendar_event.image.url(:medium)
    .col-md-8.description= "#{@calendar_event.description}"

  .row
    .col-md-offset-2


  .row
    .col-md-offset-2
    .col-md-3.date_time= "Start date and time: #{@calendar_event.start_date_time ? @calendar_event.start_date_time.to_formatted_s(:short): "No time indicated"}"
    .col-md-offset-2
    .col-md-3.location= "The event is at #{@calendar_event.location}."
  .row
    .col-md-offset-2
    .col-md-3.date_time= "End date and time: #{@calendar_event.end_date_time ? @calendar_event.end_date_time.to_formatted_s(:short): "No time indicated"}"
    .col-md-3.contact_person= "#{@calendar_event.contact_person} is the contact person for this event."

  %br
  %br

  .row
    .col-md-offset-1

    .col-sm-2= link_to 'Sign up to volunteer for this event', volunteer_signup_calendar_event_path, :class => "btn btn-success btn-sm"
    .col-md-2.centered_text= link_to('Back to events list', calendar_events_path)
    -if !current_user_account.nil? and current_user_account.admin
      .col-md-2.centered_text= link_to('Show volunteers list', show_volunteer_list_calendar_event_path)
      .col-md-2.centered_text= link_to('Edit event details', edit_calendar_event_path(@calendar_event))
      .col-md-2.centered_text= link_to('Delete event', calendar_event_path(@calendar_event), :method => :delete)
